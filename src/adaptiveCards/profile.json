{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "size": "medium",
                            "url": "${pictureUrl}",
                            "altText": "Your picture"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "verticalContentAlignment": "center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${details}",
                            "wrap": true,
                            "size": "medium"
                        }
                    ]
                }
            ]
        }
    ]
}